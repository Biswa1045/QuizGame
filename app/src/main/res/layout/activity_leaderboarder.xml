<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".leaderboarderActivity">

    <LinearLayout
        android:id="@+id/adView7"
        android:layout_width="match_parent"
        android:layout_height="50dp"


        android:layout_above="@+id/buttom_navigation"
        android:orientation="vertical" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttom_navigation"
        app:itemBackground="@color/white"
        app:itemTextColor="#9C27B0"
        app:itemIconTint="#FF5722"
        app:menu="@menu/activity_main_drawer"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/cardpur"
        android:id="@+id/layout_leader">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trophy_animation"
            app:lottie_fileName="trophy_animation.json"
            android:layout_gravity="center"

            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_leader"
        android:layout_above="@+id/adView7">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_leader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />
    </RelativeLayout>
    <ProgressBar

        android:id="@+id/progressBar_leader"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttom_navigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="274dp"
        android:layout_marginEnd="183dp"
        android:layout_marginBottom="280dp" />
</RelativeLayout>